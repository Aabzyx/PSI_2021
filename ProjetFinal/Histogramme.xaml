<Window x:Class="ProjetFinal.Histogramme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetFinal"
        mc:Ignorable="d"
        Title="Quel histogramme souhaitez-vous avoir ?" Height="80" Width="375">
    <Grid>
        <Button Name="Grey" Width="60" Height="25" HorizontalAlignment="Left" Margin="10,0,10,0" Click="btnGris">Gris</Button>
        <Button Name="R" Width="60" Height="25" HorizontalAlignment="Left" Margin="80,0,10,0" Click="btnR">Rouge</Button>
        <Button Name="G" Width="60" Height="25" HorizontalAlignment="Left" Margin="150,0,10,0" Click="btnV">Vert</Button>
        <Button Name="B" Width="60" Height="25" HorizontalAlignment="Left" Margin="220,0,10,0" Click="btnB">Bleu</Button>
        <Button Name="RGB" Width="60" Height="25" HorizontalAlignment="Left" Margin="290,0,10,0" Click="btnRVB">RVB</Button>
    </Grid>
</Window>
